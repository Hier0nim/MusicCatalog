@model MusicCatalog.Application.ViewModels.Track.ListTrackForListVm

@{
    ViewData["Title"] = "Tracks Page";
}

<h1>@TempData.Peek("AlbumTitle") - @TempData.Peek("artist")</h1>

<form asp-action="Index" asp-controller="Track" method="post">
    <div class="container">
        <div class="row">
            <div class="col">Search Track</div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="w-100"></div>
            <div class="col"><input type="text" asp-for="SearchString" name="searchString" id="searchString" /></div>
            <div class="col"><input type="submit" value="search" /></div>
            <div class="col"></div>
            <div class="col"> <input type="button" value="Create New Track" onclick="location.href='@Url.Action("AddTrack", "Track")'" /></div>
            <div class="col"> <input type="button" value="Return to Albums" onclick="location.href='@Url.Action("Index", "Album")'" /></div>
            <div class="w-100"></div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="col"></div>
            <div class="col"></div>
        </div>
    </div>
    </div>
    <div class="container bootstrap snippets bootdey">
        <div class="row">
            <div class="col-lg-12">
                <div class="main-box no-header clearfix">
                    <div class="main-box-body clearfix">
                        <div class="table-responsive">
                            <table class="table user-list">
                                <thead>
                                    <tr>
                                        <th><span>@Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TrackTitleSortParm })</span></th>
                                        <th><span>Artist</span></th>
                                        <th><span>Year</span></th>
                                        <th><span>Provider Email</span></th>
                                        <th>&nbsp;</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Tracks)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Title)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Album.Artist)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Album.PublicationYear)
                                            </td>
                                            <td>
                                                @User.Identity.Name
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "EditTrack", new { id=item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <ul class="pagination pull-right">
                            <tr>
                                @for (int i = 1; i <= Math.Ceiling(Model.Count / (double)Model.PageSize); i++)
                                {
                                    <td>
                                        @if (i != Model.CurrentPage)
                                        {
                                    <li><a href="javascript:PagerClick(@i)">@i</a></li>
                                        }
                                        else
                                        {
                                    <li><a></a>@i<a /></li>
                                        }
                                </td>
                                }
                            </tr>
                            </u>
                            <input type="hidden" name="pageNumber" id="pageNumber" />
                            <input type="hidden" name="pageSize" id="pageSize" value="2" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
    {
    <script type="text/javascript">
        function PagerClick(index) {
            document.getElementById("pageNumber").value = index;
            document.forms[1].submit();
        }
    </script>
}

@section Styles
    {
    <style type="text/css">
    </style>
}
